<%= form_with model: stock, local: true, id: "warehouse-form" do |f| %>
  <div class="form-group">
    <%= f.select :warehouse_id,
                 @warehouses.all.map { |w| [w.full_address, w.id] } %>
  </div>
  <div class="form-group">
    <%= f.select :product_id, @products.all.map { |p| [p.name, p.id] } %>
  </div>
  <div class="form-group">
    <%= f.label :count %>
    <%= f.text_field :count, class: "form-control" %>
  </div>
  <%= f.submit "Save Stock", class: "btn btn-primary", id: "submit-button" %>
<% end %>
